<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.SmsScheduler">

    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/mp_10"
        android:gravity="top|start"
        android:hint="@string/message"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="2"
        android:padding="@dimen/mp_10"
        android:scrollbars="vertical" />

    <RelativeLayout
        android:id="@+id/rrl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/message">

        <RelativeLayout
            android:id="@+id/date_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mp_5">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8" />

            <ImageView
                android:id="@+id/select_date"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8"
                android:src="@drawable/calendar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/time_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_main"
            android:layout_marginTop="@dimen/mp_5">

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8" />

            <ImageView
                android:id="@+id/select_time"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8"
                android:src="@drawable/clock" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/selectContactsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_main"
            android:layout_marginTop="@dimen/mp_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8"
                android:text="Select Contacts" />

            <ImageView
                android:id="@+id/select_contacts"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/mp_8"
                android:layout_marginEnd="@dimen/mp_8"
                android:src="@drawable/phonebook" />
        </RelativeLayout>

    </RelativeLayout>


    <GridView
        android:id="@+id/contactsGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/save"
        android:layout_below="@id/rrl2"
        android:layout_margin="@dimen/mp_8"
        android:gravity="center"
        android:horizontalSpacing="@dimen/mp_8"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/mp_8">

    </GridView>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/mp_5"
        android:visibility="gone" />
</RelativeLayout>